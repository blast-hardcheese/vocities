GET     /test-data                                                   @controllers.Application.testData
GET     /edit                                                        @controllers.Application.edit(path: String ?= "")
POST    /edit                                                        @controllers.Application.save(path: String ?= "")

GET     /account                                                     @controllers.Users.index
GET     /account/edit/:domain_id/                                    @controllers.Users.edit(domain_id: Long, path="")
GET     /account/edit/:domain_id/*path                               @controllers.Users.edit(domain_id: Long, path)

PUT     /account/edit/:domain_id/                                    @controllers.Users.save(domain_id: Long, path="")
PUT     /account/edit/:domain_id/*path                               @controllers.Users.save(domain_id: Long, path)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                controllers.Assets.at(path="/public", file)
->      /auth                                                        securesocial.Routes

GET     /                                                            @controllers.Application.route(path = "")
GET     /*path                                                       @controllers.Application.route(path: String)
