GET     /user/link                                                    controllers.Users.associate()
GET     /user/link/:id                                                controllers.Users.associateResult(id: String)
GET     /user/unlink/:id                                              controllers.Users.disassociate(id: String)

GET     /edit/:domain/                                                controllers.Application.edit(domain: String, path="")
GET     /edit/:domain/*path                                           controllers.Application.edit(domain: String, path)

PUT     /edit/:domain/                                                controllers.Application.save(domain: String, path="", templateId: String ?= "")
PUT     /edit/:domain/*path                                           controllers.Application.save(domain: String, path, templateId: String ?= "")

GET     /account/edit/:domain/                                        controllers.Users.edit(domain: String, path="")
GET     /account/edit/:domain/*path                                   controllers.Users.edit(domain: String, path)

POST    /account/new-domain                                           controllers.Users.newDomain
POST    /account/new-page                                             controllers.Users.newPage

# Map static resources from the /public folder to the /assets URL path
